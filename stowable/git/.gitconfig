[color "diff"]
    meta = cyan dim
    frag = magenta dim
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[commit]
    gpgsign = true
[core]
    pager = diff-so-fancy | less --tabs=4 -RFX
    excludesfile = /home/dshoreman/.config/git/gitignore
[diff-so-fancy]
    rulerWidth = 47
    stripLeadingSymbols = false
    markEmptyLines = false
[help]
    autocorrect = 1
[merge]
    tool = meld
[rerere]
    enabled = true
