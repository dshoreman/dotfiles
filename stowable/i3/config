# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Noto Sans, Awesome 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec termite

# open Nextcloud
for_window [instance="nc.dsdev.io"] floating enable
bindsym $mod+Home exec "google-chrome-stable --window-size=1280,720 --app='https://nc.dsdev.io'"

# take a screenshot
for_window [class="Shotty"] floating enable
bindsym Print exec shotty
bindsym --release Shift+Print exec "import /tmp/ss.png; mv /tmp/ss.png $(zenity --file-selection --save --filename=\\"/home/$(whoami)/nextcloud/Screenshots/.png\\" 2>/dev/null)"

