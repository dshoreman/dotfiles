#!/usr/bin/env zsh

alias grep="grep -n --color=auto"
alias grep3="grep -n3"
alias grep5="grep -n5"
alias grepi="grep -i"
alias grepi3="grepi -n3"
alias grepi5="grepi -n5"
alias grepp="grep -R --exclude-dir={node_modules,vendor,.git} --exclude=\*.{map,min.js}"
alias grepp3="grepp -n3"
alias grepp5="grepp -n5"
alias greppi="grepp -i"
alias greppi3="grepp -n3"
alias greppi5="grepp -n5"
